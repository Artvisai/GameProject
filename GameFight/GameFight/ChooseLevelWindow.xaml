<Window x:Class="GameFight.ChooseLevelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameFight"
        mc:Ignorable="d"
        Title="Choose Level" Height="200" Width="310">
    <Grid>
        <Button x:Name="LevelOne" Background = "SpringGreen" Content="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="50" Margin="40,0,0,0" FontSize="24" Click="LevelOne_Click"/>
        <Button x:Name="LevelThreeButton" Background = "IndianRed" Content="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="50" Margin="220,0,0,0" FontSize="24" Click="LevelThree_Click"/>
        <Button x:Name="LevelTwoButton" Background = "IndianRed" Content="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" FontSize="24" Click="LevelTwo_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="55" FontSize="9" Click="BackButton_Click"/>

    </Grid>
</Window>
