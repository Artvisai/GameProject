<Window x:Class="GameFight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameFight"
        mc:Ignorable="d"
        Title="Game" Height="500" Width="700">
    <Grid>
        <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Top" Height="60" Width="340" FontSize="22" Click="PlayButton_Click" Margin="0,135,0,0"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Height="60" Width="340" Click="ExitButton_Click" FontSize="22"/>
        <Button x:Name="clearSavesButton" Content="Clear Saves" HorizontalAlignment="Left" Margin="548,414,0,0" VerticalAlignment="Top" Height="36" Width="112" Click="clearSavesButton_Click"/>

    </Grid>
</Window>
